<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HueName"
        android:id="@+id/HueNameView"
        android:layout_alignTop="@+id/quickOnOffSwitch"
        android:layout_toRightOf="@+id/imageViewColour"
        android:layout_toEndOf="@+id/imageViewColour"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quickOnOffSwitch"
        android:checked="false"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/IDView"
        android:layout_toStartOf="@+id/IDView" />

    <TextView
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ID"
        android:id="@+id/IDView"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/quickOnOffSwitch" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageViewColour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_action_name"
        android:foregroundTint="#000000"
        android:clickable="false"
        android:tint="#000000" />

</RelativeLayout>