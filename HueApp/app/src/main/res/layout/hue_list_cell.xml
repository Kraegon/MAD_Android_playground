<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HueName"
        android:id="@+id/HueNameView"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/quickOnOffSwitch"
        android:layout_toRightOf="@+id/surfaceView"
        android:layout_toEndOf="@+id/surfaceView" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quickOnOffSwitch"
        android:checked="false"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/IDView"
        android:layout_toStartOf="@+id/IDView" />

    <SurfaceView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/surfaceView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:focusableInTouchMode="false" />

    <TextView
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ID"
        android:id="@+id/IDView"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/quickOnOffSwitch" />

</RelativeLayout>